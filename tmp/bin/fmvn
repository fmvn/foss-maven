#!/bin/sh
# this script is a hack to set m2.conf and some other options
if [ -f /usr/share/java-utils/java-functions ] ; then
  . /usr/share/java-utils/java-functions
  set_jvm
  set_javacmd
fi

if [ -z "$M2_HOME" ]
then
    export M2_HOME=/usr/share/maven
    #export M2_HOME=/opt/apache/apache-maven-3.0.3
fi
FMVN_HOME=`dirname $0`/..
if [ -z "$FMVN_REPO" ]
then
    # Must be a valid URL
    FMVN_REPO=file:/usr/share/maven/repository
fi
export M2_CONF=`dirname $0`/m2.conf
echo $JAVA_HOME
export JAVA_HOME
#  -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005 \
exec /usr/bin/java \
  -ea \
  -classpath "${M2_HOME}"/boot/*classworlds*.jar \
  "-Dclassworlds.conf=${M2_CONF}" \
  "-Dfmvn.home=${FMVN_HOME}" \
  "-Dfmvn.repo=${FMVN_REPO}" \
  "-Dmaven.home=${M2_HOME}" \
  org.codehaus.plexus.classworlds.launcher.Launcher \
  "-Dmaven.repo.local=.m2" $*
